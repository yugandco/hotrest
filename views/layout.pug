        link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.css")
    body
        header
            nav.navbar.navbar-expand-lg.navbar-dark.w-100(style='background: rgba(0,0,0,1); opacity: 1; position: absolute; z-index: 999;')
                .container
                    a.navbar-brand(href='/') Hot&Rest
                    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                        span.navbar-toggler-icon
                    #navbarSupportedContent.collapse.navbar-collapse
                        ul.navbar-nav.mr-auto
                            li.nav-item.active
                                a.nav-link(href='/')
                                    | Home 
                                span.sr-only (current)
                            if user
                                if user.username === 'Admin'
                                    li.nav-item
                                        a.nav-link(href='/admin/hotel') Hotel
                                    li.nav-item
                                        a.nav-link(href='/admin/restaurant') Restaurant
                                else
                                    li.nav-item
                                        a.nav-link(href='/hotel/' + user._id) Hotel
                                    li.nav-item
                                        a.nav-link(href='/restaurant/' + user._id) Restaurant
                            //- li.nav-item.dropdown
                            //-     a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                            //-         | Dropdown
                            //-     .dropdown-menu(aria-labelledby='navbarDropdown')
                            //-         a.dropdown-item(href='#') Action
                        div.d-flex.justify-content-center.my-2.my-lg-0
                            if user
                                if user.username === 'Admin'
                                    //- a.btn.btn-outline-warning.my-2.my-sm-0(href='/admin/lists') My Admin
                                    a.btn.btn-outline-light.my-2.my-sm-0.ml-2(href='/logout') Logout
                                else
                                    a.btn.btn-outline-warning.my-2.my-sm-0(href='/user/id/' + user._id) My Account
                                    a.btn.btn-outline-light.my-2.my-sm-0.ml-2(href='/logout') Logout
                            else
                                a.btn.btn-outline-warning.my-2.my-sm-0(href='/registr') Registr
                                a.btn.btn-outline-light.my-2.my-sm-0.ml-2(href='/login') Login
        block content
        script(src="/bower_components/jquery/dist/jquery.js")
        script(src="/bower_components/bootstrap/dist/js/bootstrap.js")
        script(src="/assets/js/main.js")